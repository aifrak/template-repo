{
  // Editor:
  "editor.rulers": [80],
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,

  // Files:
  "files.associations": {
    "**/.husky/*": "shellscript",
    "run": "shellscript"
  },
  "files.watcherExclude": {
    "**/.git": true,
    "**/.husky/_/**": true,
    // VSCode
    "**/.history/**": true,
    // NodeJS
    "**/node_modules/**": true,
    "**/npm_cache/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.history": true
  },

  // Search:
  "search.exclude": {
    "**/.git": true,
    "**/.husky/_/**": true,
    // VSCode
    "**/.history/**": true,
    // NodeJS
    "**/node_modules": true,
    "**/npm_cache": true
  },

  // Git:
  "git.inputValidationSubjectLength": 100,

  // Prettier:
  "prettier.useEditorConfig": true,

  // Shellformat:
  "shellformat.useEditorConfig": true,

  // Shellcheck:
  "shellcheck.customArgs": ["-x"],
  "shellcheck.useWorkspaceRootAsCwd": true,

  // Task explorer:
  "taskExplorer.groupSeparator": ":",
  "taskExplorer.exclude": [
    "**/.history/**",
    // NodeJS
    "**/node_modules/**",
    "**/npm_cache/**"
  ],

  // Comment Divider:
  "comment-divider.length": 50,

  // Markdown All in One:
  "markdown.extension.orderedList.marker": "one",

  // Conventional Commits:
  "conventionalCommits.autoCommit": false,
  "conventionalCommits.gitmoji": false,
  "conventionalCommits.lineBreak": "\\n",

  // YAML:
  "yaml.schemas": {
    "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json": "cspell.yml"
  },

  // Override languages:
  "[dockerfile]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[git-commit]": {
    "editor.rulers": [100]
  },
  "[git-rebase]": {
    "editor.rulers": [100]
  },
  "[html]": {
    "editor.rulers": [120]
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "files.trimTrailingWhitespace": false
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // VSCode icons:
  "vsicons.associations.files": [
    {
      "icon": "docker",
      "extensions": ["docker-compose.dev.yml", "docker-compose.override.yml"],
      "filename": true
    },
    {
      "icon": "markdownlint",
      "extensions": [".markdownlintignore"],
      "filename": true
    }
  ],

  // Code Spell Checker:
  "cSpell.ignorePaths": [
    "**/package-lock.json/**",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects",
    "**/.vscode-insiders/**"
  ]
}
