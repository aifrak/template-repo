{
  // Editor:
  "editor.rulers": [80],
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,

  // Files:
  "files.associations": {
    ".markdownlintignore": "ignore",
    "**/.husky/*": "shellscript",
    "run": "shellscript"
  },
  "files.watcherExclude": {
    "**/.git": true,
    "**/.husky/_/**": true,
    // VSCode
    "**/.history/**": true,
    // NodeJS
    "**/node_modules/**": true,
    "**/npm_cache/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.history": true
  },

  // Search:
  "search.exclude": {
    "**/.git": true,
    "**/.husky/_/**": true,
    // VSCode
    "**/.history/**": true,
    // NodeJS
    "**/node_modules": true,
    "**/npm_cache": true
  },

  // Git:
  "git.inputValidationSubjectLength": 100,

  // Prettier:
  "prettier.useEditorConfig": true,

  // Shellformat:
  "shellformat.useEditorConfig": true,

  // Shellcheck:
  "shellcheck.customArgs": ["-x"],
  "shellcheck.useWorkspaceRootAsCwd": true,

  // Task explorer:
  "taskExplorer.groupSeparator": ":",
  "taskExplorer.exclude": [
    "**/.history/**",
    // NodeJS
    "**/node_modules/**",
    "**/npm_cache/**"
  ],

  // Comments:
  "comment-divider.length": 50,
  "comment-divider.lineFiller": "—",
  "comment-divider.mainHeaderFiller": "—",
  "comment-divider.subheaderFiller": "—",
  "commentAnchors.workspace.excludeFiles": "**/{node_modules,npm_cache,.husky/_,.history}/**/*",
  "commentAnchors.tags.list": [
    {
      "tag": "TEMP",
      "iconColor": "pink",
      "highlightColor": "#e84393",
      "scope": "workspace"
    },
    {
      "tag": "DEPRECATED",
      "iconColor": "pink",
      "highlightColor": "#e84393",
      "scope": "workspace"
    },
    {
      "tag": "IDEA",
      "iconColor": "purple",
      "highlightColor": "#ba68c8",
      "scope": "workspace"
    },
    {
      "tag": "QUESTION",
      "iconColor": "purple",
      "highlightColor": "#ba68c8",
      "scope": "workspace"
    },
    {
      "tag": "DEBUG",
      "iconColor": "red",
      "highlightColor": "#F44336",
      "scope": "workspace"
    },
    {
      "tag": "WARNING",
      "iconColor": "orange",
      "highlightColor": "#ffa100",
      "scope": "workspace"
    },
    {
      "tag": "FIX",
      "iconColor": "emerald",
      "highlightColor": "#2ecc71",
      "scope": "file"
    },
    {
      "tag": "HACK",
      "iconColor": "orange",
      "highlightColor": "#ffa100",
      "scope": "workspace"
    },
    {
      "tag": "!!!",
      "iconColor": "#ff2d00",
      "highlightColor": "#ff2d00",
      "scope": "workspace"
    },
    {
      "tag": "???",
      "iconColor": "#3498db",
      "highlightColor": "#3498db",
      "scope": "workspace"
    }
  ],

  // Markdown All in One:
  "markdown.extension.orderedList.marker": "one",

  // Conventional Commits:
  "conventionalCommits.autoCommit": false,
  "conventionalCommits.gitmoji": false,
  "conventionalCommits.lineBreak": "\\n",

  // YAML:
  "yaml.schemas": {
    "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json": "cspell.yml"
  },

  // Override languages:
  "[dockerfile]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[git-commit]": {
    "editor.rulers": [100]
  },
  "[git-rebase]": {
    "editor.rulers": [100]
  },
  "[handlebars]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.rulers": [120]
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.rulers": [100] // Follow rule from eslint-config-airbnb-base
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "files.trimTrailingWhitespace": false
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // VSCode icons:
  "vsicons.associations.files": [
    {
      "icon": "docker",
      "extensions": [
        "docker-compose.ci.yml",
        "docker-compose.dev.yml",
        "docker-compose.override.yml"
      ],
      "filename": true
    },
    {
      "icon": "markdownlint",
      "extensions": [".markdownlintignore"],
      "filename": true
    }
  ]
}
