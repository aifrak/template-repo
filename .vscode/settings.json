{
  // Editor:
  "editor.rulers": [80],
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    ".commitlintrc*": ".cz.*",
    ".eslintrc*": ".eslint*",
    ".gitignore": ".git*",
    ".markdownlint*": ".markdownlintignore",
    ".prettierrc*": ".prettier*",
    ".release-it.*": "VERSION",
    ".stylelintrc*": ".stylelint*",
    "cspell.*": ".cspell*",
    "Dockerfile": ".docker*, docker-compose.*, Dockerfile*",
    "README.*": "*.md, LICENSE",
    "package.json": ".npmrc, package-lock.json"
  },

  // Files:
  "files.associations": {
    ".markdownlintignore": "ignore",
    "**/.husky/*": "shellscript",
    "run": "shellscript"
  },
  "files.watcherExclude": {
    "**/.git": true,
    "**/.husky/_/**": true,
    // VSCode
    "**/.history/**": true,
    // NodeJS
    "**/node_modules/**": true,
    "**/npm_cache/**": true,
    // Cache for lints
    "**/.prettier-cache": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.history": true
  },

  // Search:
  "search.exclude": {
    "**/.git": true,
    "**/.husky/_/**": true,
    // VSCode
    "**/.history/**": true,
    // NodeJS
    "**/node_modules": true,
    "**/npm_cache": true,
    // Cache for lints
    "**/.prettier-cache": true
  },

  // Git:
  "git.inputValidationSubjectLength": 100,

  // Prettier:
  "prettier.useEditorConfig": true,

  // Shellformat:
  "shellformat.useEditorConfig": true,

  // Shellcheck:
  "shellcheck.customArgs": ["-x"],
  "shellcheck.useWorkspaceRootAsCwd": true,

  // Task explorer:
  "taskExplorer.groupSeparator": ":",
  "taskExplorer.exclude": [
    "**/.history/**",
    // NodeJS
    "**/node_modules/**",
    "**/npm_cache/**"
  ],

  // Comments:
  "comment-divider.length": 50,
  "comment-divider.lineFiller": "—",
  "comment-divider.mainHeaderFiller": "—",
  "comment-divider.subheaderFiller": "—",
  "commentAnchors.workspace.excludeFiles": "**/{node_modules,npm_cache,.husky/_,.history}/**/*",
  "commentAnchors.tags.anchors": {
    "TEMP": {
      "iconColor": "pink",
      "highlightColor": "#e84393",
      "scope": "workspace"
    },
    "DEPRECATED": {
      "iconColor": "pink",
      "highlightColor": "#e84393",
      "scope": "workspace"
    },
    "IDEA": {
      "iconColor": "purple",
      "highlightColor": "#ba68c8",
      "scope": "workspace"
    },
    "QUESTION": {
      "iconColor": "purple",
      "highlightColor": "#ba68c8",
      "scope": "workspace"
    },
    "DEBUG": {
      "iconColor": "red",
      "highlightColor": "#F44336",
      "scope": "workspace"
    },
    "WARNING": {
      "iconColor": "orange",
      "highlightColor": "#ffa100",
      "scope": "workspace"
    },
    "FIX": {
      "iconColor": "emerald",
      "highlightColor": "#2ecc71",
      "scope": "file"
    },
    "HACK": {
      "iconColor": "orange",
      "highlightColor": "#ffa100",
      "scope": "workspace"
    },
    "!!!": {
      "iconColor": "#ff2d00",
      "highlightColor": "#ff2d00",
      "scope": "workspace"
    },
    "???": {
      "iconColor": "#3498db",
      "highlightColor": "#3498db",
      "scope": "workspace"
    }
  },

  // Markdown All in One:
  "markdown.extension.orderedList.marker": "one",

  // Conventional Commits:
  "conventionalCommits.autoCommit": false,
  "conventionalCommits.gitmoji": false,
  "conventionalCommits.lineBreak": "\\n",

  // YAML:
  "yaml.schemas": {
    "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json": "cspell.yml"
  },

  // Override languages:
  "[dockerfile]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[git-commit][git-rebase][javascript]": {
    // javascript: Follow rule from eslint-config-airbnb-base
    "editor.rulers": [100]
  },
  "[handlebars][html][javascript][json][jsonc][markdown][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.rulers": [120]
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },

  // VSCode icons:
  "vsicons.associations.files": [
    {
      "icon": "docker",
      "extensions": [
        "docker-compose.ci.yml",
        "docker-compose.dev.yml",
        "docker-compose.override.yml"
      ],
      "filename": true
    },
    {
      "icon": "markdownlint",
      "extensions": [".markdownlintignore"],
      "filename": true
    }
  ]
}
